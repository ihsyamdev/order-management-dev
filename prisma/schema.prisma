// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model hoge {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
}

model Customer {
  id                 String   @id @default(uuid())
  name               String
  billingPostalCode  String
  billingState       String
  billingCity        String
  billingStreet      String
  shippingPostalCode String
  shippingState      String
  shippingCity       String
  shippingStreet     String
  phone              String
  active             Boolean
  createdAt          DateTime @default(now()) @db.Timestamp(0)
  createdBy          String
  updatedAt          DateTime @default(now()) @updatedAt @db.Timestamp(0)
  updatedBy          String
}

model User {
  id        String   @id @default(uuid())
  firstName String
  lastName  String
  email     String   @unique
  active    Boolean
  createdAt DateTime @default(now()) @db.Timestamp(0)
  createdBy String
  updatedAt DateTime @default(now()) @updatedAt @db.Timestamp(0)
  updatedBy String
}

model Product {
  id          String   @id @default(uuid())
  name        String  
  active      Boolean
  createdAt   DateTime @default(now()) @db.Timestamp(0)
  createdBy   String
  updatedAt   DateTime @default(now()) @updatedAt @db.Timestamp(0)
  updatedBy   String
}

model Order {
  id              String   @id @default(uuid())
  active　　　     Boolean
  orderDate       DateTime
  sales           String
  customer        String
  approver        String
  approvalStage   String
  confirmed       String
  remark          String
  createdAt       DateTime @default(now()) @db.Timestamp(0)
  updatedAt       DateTime @default(now()) @updatedAt @db.Timestamp(0)
}

model OrderDetail {
  id              String   @id @default(uuid())
  active　　　     Boolean
  order           String
  lineNo          Int
  product         String
  quantity        Int
  unitPrice       Decimal
  amount          Decimal
  remark          String
  createdAt       DateTime @default(now()) @db.Timestamp(0)
  updatedAt       DateTime @default(now()) @updatedAt @db.Timestamp(0)  
}